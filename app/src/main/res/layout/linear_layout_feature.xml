<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="4"
    android:orientation="horizontal"
    android:visibility="invisible"> <!--SET TO INVISIBLE WHEN DONE CONFIGURING-->

    <TextView
        android:id="@+id/textFeatureIcon"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="@string/textFeatureIconPlaceholder"
        android:gravity="center"/>

    <TextView
        android:id="@+id/textFeatureDescription"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:text="@string/textFeatureDescriptionPlaceholder"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/textFeatureCount"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="@string/textFeatureCountPlaceholder"
        android:gravity="center_vertical" />
</LinearLayout>